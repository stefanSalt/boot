<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lee.lecture.system.mapper.FeedbackMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lee.lecture.system.model.entity.Feedback">
        <id column="id" property="id" />
        <result column="lecture_id" property="lectureId" />
        <result column="student_id" property="studentId" />
        <result column="rating" property="rating" />
        <result column="comment" property="comment" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <association property="lecture" javaType="com.lee.lecture.system.model.entity.Lecture">
            <id column="lecture_id" property="id" />
            <result column="title" property="title" />
        </association>
        <association property="user" javaType="com.lee.lecture.system.model.entity.User">
            <id column="student_id" property="id" />
            <result column="nickname" property="nickname" />
            <result column="phone" property="phone" />
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, lecture_id, student_id, rating, comment, create_time, update_time
    </sql>


    <!-- 讲座评价表分页列表 -->
    <select id="listPagedFeedbacks" resultMap="BaseResultMap">
        SELECT
            f.id as id,
            f.lecture_id as lecture_id,
            f.student_id as student_id,
            f.rating as rating,
            f.comment as comment,
            f.create_time as create_time,
            f.update_time as update_time,
            l.title AS title,
            u.nickname as nickname,
            u.phone as phone
        FROM
            feedback f
        LEFT JOIN lecture l ON f.lecture_id = l.id
       LEFT JOIN user u ON f.student_id = u.id
        <where>
            <if test="queryParams.lectureId != null">
                AND f.lecture_id = #{queryParams.lectureId}
            </if>
            <if test="queryParams.studentId != null">
                AND f.student_id = #{queryParams.studentId}
            </if>
        </where>

        ORDER BY create_time DESC
    </select>

</mapper>
