<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lee.selection.system.mapper.CompanyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lee.online_store.system.model.entity.Company">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="detail" property="detail" />
        <result column="company_address" property="companyAddress" />
        <result column="business_scope" property="businessScope" />
        <result column="email" property="email" />
        <result column="phone" property="phone" />
        <result column="established_date" property="establishedDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, detail, company_address, business_scope, email, phone, established_date
    </sql>


    <!-- 企业分页列表 -->
    <select id="listPagedCompanys" resultType="com.lee.online_store.system.model.entity.Company">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            company
        <where>
            <if test='queryParams.name!=null and queryParams.name.trim() neq ""'>
                AND (
                    name LIKE CONCAT('%',#{queryParams.keywords},'%')
                )
            </if>
        </where>
        ORDER BY id DESC
    </select>

</mapper>
