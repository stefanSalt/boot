<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lee.online_store.system.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lee.online_store.system.model.entity.Order">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="total_amount" property="totalAmount" />
        <result column="discount_amount" property="discountAmount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, status, create_time, update_time, total_amount, discount_amount
    </sql>


    <!-- 订单分页列表 -->
    <select id="listPagedOrders" resultType="com.lee.online_store.system.model.entity.Order">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            t_order
        <where>
            <if test="queryParams.userId != null">
                AND user_id = #{queryParams.userId}
            </if>
            <if test="queryParams.timeRange != null">
                AND create_time BETWEEN #{queryParams.timeRange[0]} AND #{queryParams.timeRange[1]}
            </if>
            <if test="queryParams.status != null">
                AND status = #{queryParams.status}
            </if>
        </where>
        ORDER BY id DESC
    </select>

</mapper>
