<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lee.selection.system.mapper.ApplyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lee.selection.system.model.entity.Apply">
        <id column="id" property="id" />
        <result column="student_id" property="studentId" />
        <result column="teacher_id" property="teacherId" />
        <result column="course_id" property="courseId" />
        <result column="status" property="status" />
        <result column="content" property="content" />
        <result column="reply" property="reply" />
        <result column="createtime" property="createtime" />
        <result column="reply_time" property="replyTime" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, student_id, teacher_id, course_id, status, content, reply, createtime, reply_time, remark
    </sql>


    <!-- 申请表分页列表 -->
    <select id="listPagedApplys" resultType="com.lee.selection.system.model.bo.ApplyBO">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            apply
        <where>

            <if test="queryParams.courseId!=null">
                AND course_id = #{queryParams.courseId}
            </if>
            <if test="queryParams.studentId!=null">
                AND student_id = #{queryParams.studentId}
            </if>
            <if test="queryParams.teacherId!=null">
                AND teacher_id = #{queryParams.teacherId}
            </if>
            <if test="queryParams.status!=null">
                AND status = #{queryParams.status}
            </if>
        </where>
        ORDER BY id DESC
    </select>
    <select id="getCountsByCourse" resultType="com.lee.selection.system.model.dto.ApplyStatisticDTO">
        SELECT
            course.name as name,
            count(1) as num
        FROM
            apply join course on apply.course_id = course.id
        GROUP BY
            course_id
    </select>

</mapper>
