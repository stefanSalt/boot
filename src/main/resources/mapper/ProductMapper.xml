<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lee.warehouse.system.mapper.ProductMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lee.warehouse.system.model.entity.Product">
        <id column="id" property="id" />
        <result column="supplier_id" property="supplierId" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="price" property="price" />
        <result column="product_code" property="productCode" />
        <result column="category" property="category" />
        <result column="model" property="model" />
        <result column="unit" property="unit" />
        <result column="cost_price" property="costPrice" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="warehouse_id" property="warehouseId"/>
        <association property="warehouse" javaType="com.lee.warehouse.system.model.entity.Warehouse">
            <id column="warehouse_id" property="id"/>
            <result column="warehouse_name" property="name"/>
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, supplier_id, name, description, price, product_code, category, model, unit, cost_price, create_time, update_time, warehouse_id
    </sql>


    <!-- 产品信息分页列表 -->
    <select id="listPagedProducts" resultMap="BaseResultMap">
        SELECT
            p.id as id,
            p.supplier_id as supplier_id,
            p.name as name,
            p.description as description,
            p.price as price,
            p.product_code as product_code,
            p.category as category,
            p.model as model,
            p.unit as unit,
            p.cost_price as cost_price,
            p.create_time as create_time,
            p.update_time as update_time,
            p.warehouse_id as warehouse_id,
            w.name as warehouse_name
        FROM
            product p left join warehouse w on p.warehouse_id = w.id
        <where>
            <if test='queryParams.name!=null and queryParams.name.trim() neq ""'>
                AND (
                    p.name LIKE CONCAT('%',#{queryParams.name},'%')
                )
            </if>
        </where>
        ORDER BY id DESC
    </select>
    <select id="listProductOptions" resultType="com.lee.warehouse.system.model.entity.Product">
        SELECT
            id, name
        FROM
            product
        ORDER BY id DESC
    </select>

</mapper>
